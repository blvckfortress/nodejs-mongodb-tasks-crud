{{#if tasks}}
  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>N.</th>
        <th>Titulo</th>
        <th>Descripci√≥n</th>
        <th>Operaciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td>{{title}} </td>
          <td>{{description}} </td>
          <td>
            {{#if done}}
              <a href="/tasks/{{_id}}/toggleDone" class="btn btn-dark">No
                realizado</a>
            {{else}}
              <a
                href="/tasks/{{_id}}/toggleDone"
                class="btn btn-success"
              >Realizado</a>
            {{/if}}

            <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Borrar</a>
            <a href="/tasks/{{_id}}/edit" class="btn btn-info">Actualizar</a>
          </td>
        </tr>
      {{/each}}

    </tbody>
  </table>
{{else}}
  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h1>Sin tareas</h1>
      <img src="/icons/empty.svg" class="w-50" />
    </div>
  </div>

{{/if}}